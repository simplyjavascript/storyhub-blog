{
  "name": "storyhub",
  "private": true,
  "description": "",
  "version": "1.3.0",
  "author": "RedQ, Inc",
  "devDependencies": {
    "husky": "^1.1.4",
    "lerna": "^3.13.1",
    "lint-staged": "^8.0.4",
    "prettier": "^1.15.2",
    "rimraf": "^2.6.3",
    "tslint": "^5.13.0",
    "tslint-react": "^3.6.0"
  },
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "personal-dev": "cd packages/personal-blog && gatsby develop",
    "personal-build": "cd packages/personal-blog && gatsby build",
    "personal-serve": "cd packages/personal-blog && gatsby serve",
    "agency-dev": "cd packages/agency-blog && gatsby develop",
    "agency-build": "cd packages/agency-blog && gatsby build",
    "agency-serve": "cd packages/agency-blog && gatsby serve",
    "minimal-dev": "cd packages/personal-blog-minimal && gatsby develop",
    "minimal-build": "cd packages/personal-blog-minimal && gatsby build",
    "minimal-serve": "cd packages/personal-blog-minimal && gatsby serve",
    "image-dev": "cd packages/image-blog && gatsby develop",
    "image-build": "cd packages/image-blog && gatsby build",
    "image-serve": "cd packages/image-blog && gatsby serve",
    "photography-dev": "cd packages/minimal-photography-blog && gatsby develop",
    "photography-build": "cd packages/minimal-photography-blog && gatsby build",
    "photography-serve": "cd packages/minimal-photography-blog && gatsby serve",
    "lite-dev": "cd packages/personal-blog-lite && gatsby develop",
    "lite-build": "cd packages/personal-blog-lite && gatsby build",
    "lite-serve": "cd packages/personal-blog-lite && gatsby serve",
    "modern-dev": "cd packages/modern-agency && gatsby develop",
    "modern-build": "cd packages/modern-agency && gatsby build",
    "modern-serve": "cd packages/modern-agency && gatsby serve",
    "docz:dev": "cd packages/components && docz dev",
    "docz:build": "cd packages/components && docz build"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,md,css}": [
      "prettier --trailing-comma es5 --single-quote --write",
      "git add"
    ]
  }
}
